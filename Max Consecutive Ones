#include <stdio.h>

int main()
{
     int arr[] = { 0 , 0 , 1 , 0 , 1 , 1 , 1 ,1 };
    int n = 8, c = 0 , max = 0 ;
  
    for(int i = 0 ; i < n ; i ++)
    {
      if(arr[i] == 1)
      {
        c+=1;
        
      }
        else
          c = 0 ;
    }
    
  if(c>max)
    max = c;
  
  printf("%d", max);
          
    return 0;
}

